<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.car.backend.mapper.user.UserMapper">

    <select id="findAll" resultType="com.car.backend.entity.user.User">
        SELECT * FROM users
    </select>

    <select id="findByUsername" resultType="com.car.backend.entity.user.User">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <update id="createTableIfNotExists">
        CREATE TABLE IF NOT EXISTS users (
            id BIGINT AUTO_INCREMENT PRIMARY KEY,
            username VARCHAR(255) NOT NULL UNIQUE,
            password VARCHAR(255) NOT NULL
        )
    </update>

    <insert id="insert" parameterType="com.car.backend.entity.user.User">
        INSERT IGNORE INTO users (username, password) VALUES (#{username}, #{password})
    </insert>

</mapper>
