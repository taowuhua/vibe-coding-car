<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.car.base.mapper.flashsale.CarFlashSaleMapper">

    <resultMap id="BaseResultMap" type="com.car.base.entity.flashsale.CarFlashSale">
        <id column="tid" property="tid" jdbcType="BIGINT"/>
        <result column="car_id" property="carId" jdbcType="BIGINT"/>
        <result column="flash_price" property="flashPrice" jdbcType="DECIMAL"/>
        <result column="start_time" property="startTime" jdbcType="TIMESTAMP"/>
        <result column="end_time" property="endTime" jdbcType="TIMESTAMP"/>
        <result column="activity_name" property="activityName" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="memo" property="memo" jdbcType="VARCHAR"/>
        <result column="create_user" property="createUser" jdbcType="VARCHAR"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="oper_user" property="operUser" jdbcType="VARCHAR"/>
        <result column="update_date" property="updateDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        tid, car_id, flash_price, start_time, end_time, activity_name, 
        status, memo, create_user, create_date, oper_user, update_date
    </sql>

    <!-- 新增 -->
    <insert id="insert" parameterType="com.car.base.entity.flashsale.CarFlashSale" useGeneratedKeys="true" keyProperty="tid">
        INSERT INTO car_flash_sale (
            car_id, flash_price, start_time, end_time, activity_name,
            status, memo, create_user, create_date, oper_user, update_date
        ) VALUES (
            #{carId}, #{flashPrice}, #{startTime}, #{endTime}, #{activityName},
            #{status}, #{memo}, #{createUser}, NOW(), #{operUser}, NOW()
        )
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.car.base.entity.flashsale.CarFlashSale">
        UPDATE car_flash_sale
        <set>
            <if test="carId != null">car_id = #{carId},</if>
            <if test="flashPrice != null">flash_price = #{flashPrice},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="activityName != null">activity_name = #{activityName},</if>
            <if test="status != null">status = #{status},</if>
            <if test="memo != null">memo = #{memo},</if>
            <if test="operUser != null">oper_user = #{operUser},</if>
            update_date = NOW()
        </set>
        WHERE tid = #{tid}
    </update>

    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM car_flash_sale
        WHERE tid = #{tid}
    </select>

    <!-- 查询列表 -->
    <select id="selectList" parameterType="com.car.base.entity.flashsale.CarFlashSale" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM car_flash_sale
        <where>
            <if test="carId != null">AND car_id = #{carId}</if>
            <if test="status != null">AND status = #{status}</if>
            <if test="activityName != null and activityName != ''">AND activity_name LIKE CONCAT('%', #{activityName}, '%')</if>
        </where>
        ORDER BY create_date DESC
    </select>

    <resultMap id="VoResultMap" type="com.car.base.entity.flashsale.vo.CarFlashSaleVO" extends="BaseResultMap">
        <result column="brand_name" property="brandName" jdbcType="VARCHAR"/>
        <result column="model" property="model" jdbcType="VARCHAR"/>
        <result column="year_months" property="year" jdbcType="VARCHAR"/>
        <result column="mileage" property="mileage" jdbcType="DECIMAL"/>
        <result column="city" property="city" jdbcType="VARCHAR"/>
        <result column="original_price" property="originalPrice" jdbcType="DECIMAL"/>
        <result column="images" property="images" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 查询VO列表 -->
    <select id="selectVoList" parameterType="com.car.base.entity.flashsale.CarFlashSale" resultMap="VoResultMap">
        SELECT 
            t.*,
            cs.brand AS brand_name,
            cs.model,
            cs.year_months,
            cs.mileage,
            cs.city,
            cs.price AS original_price,
            cs.images
        FROM car_flash_sale t
        LEFT JOIN car_source cs ON t.car_id = cs.tid
        <where>
            <if test="carId != null">AND t.car_id = #{carId}</if>
            <if test="status != null">AND t.status = #{status}</if>
            <if test="activityName != null and activityName != ''">AND t.activity_name LIKE CONCAT('%', #{activityName}, '%')</if>
        </where>
        ORDER BY t.create_date DESC
    </select>

</mapper>
