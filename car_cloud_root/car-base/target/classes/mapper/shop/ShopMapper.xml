<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.car.base.mapper.shop.ShopMapper">

    <!-- 通用结果映射 -->
    <resultMap id="BaseResultMap" type="com.car.base.entity.shop.Shop">
        <id column="tid" property="tid"/>
        <result column="shop_name" property="shopName"/>
        <result column="user_id" property="userId"/>
        <result column="logo" property="logo"/>
        <result column="contact_name" property="contactName"/>
        <result column="contact_phone" property="contactPhone"/>
        <result column="address" property="address"/>
        <result column="city" property="city"/>
        <result column="province" property="province"/>
        <result column="description" property="description"/>
        <result column="car_count" property="carCount"/>
        <result column="status" property="status"/>
        <result column="memo" property="memo"/>
        <result column="create_user" property="createUser"/>
        <result column="create_date" property="createDate"/>
        <result column="oper_user" property="operUser"/>
        <result column="update_date" property="updateDate"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        tid, shop_name, user_id, logo, contact_name, contact_phone, address, city, province,
        description, car_count, status, memo, create_user, create_date, oper_user, update_date
    </sql>

    <!-- 根据用户ID查询微店 -->
    <select id="findByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM shop
        WHERE user_id = #{userId} AND status = 1
        LIMIT 1
    </select>

    <!-- 更新微店车辆数量 -->
    <update id="updateCarCount">
        UPDATE shop
        SET car_count = #{count}, update_date = NOW()
        WHERE tid = #{shopId}
    </update>

</mapper>
